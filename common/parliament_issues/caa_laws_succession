caa_laws_succession = {
	category = 2 		# same category = 90% less likely

	allow = {
		has_reform = canaania_reform
		NOT = { has_country_modifier = laws_succession }
	}

	effect = {
        add_country_modifier = {
            name = laws_succession
            duration = -1
        }
        add_dip_power = -100
	}

	modifier = {
	}

	chance = {
		factor = 1
		modifier = {
			factor = 2
			average_home_autonomy = 25
		}
		modifier = {
			factor = 3
			average_home_autonomy = 35
		}
		modifier = {
			factor = 3
			average_home_autonomy = 50
		}
	}

	ai_will_do = {
		factor = 1
		modifier = {
			factor = 2
			average_home_autonomy = 25
		}
		modifier = {
			factor = 0
			NOT = { average_home_autonomy = 10 }
		}
	}
}